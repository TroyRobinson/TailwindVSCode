{
  "name": "tailwind-preview-hover",
  "displayName": "Tailwind Preview + Hover",
  "description": "Preview HTML with Tailwind (CDN or local) and hover elements to see applied Tailwind classes.",
  "version": "0.0.1",
  "publisher": "local-dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onCommand:tailwindPreview.openPreview",
    "onCommand:tailwindPreview.openServerPreview"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Tailwind Preview",
      "properties": {
        "tailwindPreview.openRouterApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenRouter API key for AI class editing (overrides built-in default if set)."
        }
      }
    },
    "commands": [
      {
        "command": "tailwindPreview.openPreview",
        "title": "Tailwind: Open Preview",
        "category": "Tailwind",
        "icon": "$(eye)"
      },
      {
        "command": "tailwindPreview.openServerPreview",
        "title": "Tailwind: Open Server Preview",
        "category": "Tailwind",
        "icon": "$(browser)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tailwindPreview.openPreview",
          "group": "navigation@1",
          "when": "resourceLangId == html && tailwindPreview.hasTailwind"
        },
        {
          "command": "tailwindPreview.openServerPreview",
          "group": "navigation@2",
          "when": "true"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "UNLICENSED",
  "dependencies": {
    "parse5": "^7.3.0"
  }
}
